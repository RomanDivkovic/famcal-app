{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "include": ["src/"],
    "exclude": ["node_modules/", "coverage/", ".expo/", "dist/"],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "include": ["src/"],
    "exclude": ["node_modules/", "coverage/", ".expo/", "dist/"],
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "test": {
    "include": ["src/__tests__/", "tests/"]
  },
  "tasks": {
    "test": "deno test --allow-read tests/",
    "test:watch": "deno test --allow-read --watch tests/"
  }
}
