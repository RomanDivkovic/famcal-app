# Environment Configuration
# Copy this file to .env and update with your actual values

# Backend Selection
# Set to 'true' to use Firebase, 'false' to use custom .NET API
EXPO_PUBLIC_USE_FIREBASE=true

# Firebase Configuration (only needed if USE_FIREBASE=true)
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_DATABASE_URL=https://your_project.firebaseio.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
EXPO_PUBLIC_FIREBASE_APP_ID=your_app_id

# Custom API Configuration (only needed if USE_FIREBASE=false)
EXPO_PUBLIC_API_BASE_URL=https://your-dotnet-api.com/api

# App Configuration
EXPO_PUBLIC_APP_NAME=GroupCalendar
EXPO_PUBLIC_APP_VERSION=1.0.0
